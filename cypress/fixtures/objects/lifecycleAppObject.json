{
  "validationConfig": {
    "initializing": {
      "stateValidation": { "req": "R*2.1.1 & R*2.1.2 & R*4.6" },
      "historyValidation": { "req": "R*2.1.3" },
      "notificationValidation": { "req": "" }
    },
    "inactive": {
      "stateValidation": { "req": "R*4.6" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "R*2.2.2 [Platform MUST trigger 'onInactive' event]" }
    },
    "foreground": {
      "stateValidation": { "req": "R*4.6" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "R*2.3.6 [Platform MUST trigger 'onForeground' event]" }
    },
    "background": {
      "stateValidation": { "req": "R*4.6" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "R*2.4.6 [Platform MUST trigger 'onBackground' event]" }
    },
    "unloading": {
      "stateValidation": { "req": "R*2.5.1 & R*2.5.2 & R*4.6" },
      "historyValidation": { "req": "R*2.5.3" },
      "notificationValidation": { "req": "" }
    },
    "suspended": {
      "stateValidation": { "req": "R*4.6" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "R*2.6.6 [Platform MUST trigger 'onSuspended' event]" }
    },
    "unloaded": {
      "stateValidation": { "req": "" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "" }
    },
    "terminated": {
      "stateValidation": { "req": "" },
      "historyValidation": { "req": "" },
      "notificationValidation": { "req": "" }
    }
  },
  "allowedStateTransitions": {
    "initializing": ["inactive", "terminated"],
    "inactive": ["foreground", "background", "suspended", "unloading"],
    "foreground": ["inactive", "background"],
    "background": ["foreground", "inactive"],
    "unloading": ["unloaded"],
    "suspended": ["inactive", "terminated"],
    "unloaded": [],
    "terminated": []
  }
